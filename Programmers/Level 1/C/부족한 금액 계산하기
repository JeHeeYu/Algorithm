#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>

long long solution(int price, int money, int count) {
    long long answer = 0;
    
    int i;
    int cnt = 1;
    
    for(i = 1; i <= count; i++)
    {
        answer += (price * cnt);
        cnt++;
    }
    
    answer -= money;
    
    if(answer <= 0)
        answer = 0;
    
    return answer;
}
